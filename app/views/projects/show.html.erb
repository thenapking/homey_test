<h1>Project Details</h1>

<!-- Main Project Details -->
<div class="main-details">
  <p><strong>Name:</strong> <%= @project.name %></p>
  <p><strong>Current Status:</strong> <%= @project.status.humanize %></p>
</div>

<!-- Partials for Status Updates and Comments -->
<div class="project-additional-details">
  <div class="comments-section">
    <%= render 'comments', project: @project %>
  </div>
</div>

<div class="actions">
  <%= link_to 'Edit Project', edit_project_path(@project), class: "btn btn-primary" %>
  <%= link_to 'Back to Projects', projects_path, class: "btn btn-secondary" %>
</div>
